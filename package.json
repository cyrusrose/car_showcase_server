{
    "name": "rest-express",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon src/api/index.ts",
        "start": "node build/index.js",
        "clean": "rmdir /s /q build",
        "build": "npm -s run clean && npm -s run generate:prisma && tsc && npm -s run build:schema",
        "build:schema": "ts-node src/schema/index.ts",
        "generate:prisma": "prisma generate"
    },
    "dependencies": {
        "@pothos/core": "^3.36.0",
        "@pothos/plugin-prisma": "^3.59.3",
        "@prisma/client": "5.3.1",
        "dotenv": "^16.3.1",
        "express": "4.18.2",
        "graphql": "^15.8.0",
        "graphql-scalars": "^1.22.2",
        "graphql-yoga": "^4.0.4"
    },
    "devDependencies": {
        "@types/express": "4.17.17",
        "@types/node": "18.17.17",
        "nodemon": "^3.0.1",
        "prisma": "5.3.1",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "semi": false,
        "endOfLine": "lf",
        "bracketSameLine": true,
        "trailingComma": "none"
    }
}
