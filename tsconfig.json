{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true
    },
    "watchOptions": {
        "watchFile": "fixedPollingInterval"
    },
    "include": ["src/**/*"]
}
