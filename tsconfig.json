{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true,
        "paths": {
            "@chat/*": ["./apps/chat_server/src/*"],
            "@common": ["libs/common/src"],
            "@common/*": ["libs/common/src/*"]
        }
    }
}
